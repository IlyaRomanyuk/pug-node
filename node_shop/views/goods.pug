include header.pug
div(class="wrap")
    div(class="content")
        header(class="header-site")
            include header-site.pug

        div(class="container")
            div(class="row")
                div(class="col col-md-12")
                    h2(class="panel-title") #{goods[0]['name']}
                div(class="col col-md-4")
                    img(class="panel-img" src="images/"+goods[0]['image'])
                div(class="col col-md-8")
                    p(class="panel-descr") #{goods[0]['description']}
                    span(class="success") Цена: #{goods[0]['cost']} uah
                    button(class="btn btn-success add-to-cart" id="btn" data-id=goods[0]['id']) Add to cart
        
        include nav.pug
    include footer.pug